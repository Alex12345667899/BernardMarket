<%= simple_form_for(@offer) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :location %>
    <%= f.input :price %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
