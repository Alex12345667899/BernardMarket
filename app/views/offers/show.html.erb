<div class="d-flex justify-content-center">
  <div class="card-offer">
    <div class="card-offer-picture">
      <% if @offer.image.blank? %>
        <%= image_tag @offer.photo, class: "img-fluid" %>
      <% else @offer.photo.blank? %>
        <%= image_tag "#{@offer.image}", class: 'card-img-top object-fit-cover img-fluid' %>
      <% end %>
    </div>
    <div class="card-offer-infos">
      <h2><%= @offer.title %></h2>
      <h4><%= @offer.location %> 🏝️</h4>
      <%= render "bookings/form", offer: @offer, booking: @booking %>
    <div class="card-offer-price">
      <h6>Bernard <%= @offer.user.last_name %></h6>
      <h4><%= @offer.price %> 🌿 per night</h4>
    </div>

    </div>
  </div>
</div>


